<Page x:Class="Gromi.Template.Wpf.Views.TestView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      Title="TestView" Width="552"
      Background="{DynamicResource RegionBrush}">

    <hc:TransitioningContentControl>
        <StackPanel>
            <TextBox Width="380"
                  hc:InfoElement.TitleWidth="140"
                  hc:InfoElement.TitlePlacement="Left"
                  hc:InfoElement.Title="操作数一"
                  Style="{StaticResource TextBoxExtend}"
                  Margin="0,32,0,0"
                  Text="{Binding OperData_One}">
            </TextBox>
            <TextBox Width="380"
                  hc:InfoElement.TitleWidth="140"
                  hc:InfoElement.TitlePlacement="Left"
                  hc:InfoElement.Title="操作数二"
                  Style="{StaticResource TextBoxExtend}"
                  Margin="0,32,0,0"
                  Text="{Binding OperData_Two}">
            </TextBox>
            <TextBox Width="380" IsEnabled="False"
                  hc:InfoElement.TitleWidth="140"
                  hc:InfoElement.TitlePlacement="Left"
                  hc:InfoElement.Title="结果"
                  Style="{StaticResource TextBoxExtend}"
                  Margin="0,32,0,0"
                  Text="{Binding Result}">
            </TextBox>
            <Button Content="加法" Margin="5" Style="{StaticResource ButtonPrimary}" Command="{Binding Add}" />
            <Button Content="减法" Margin="5" Style="{StaticResource ButtonDanger}" Command="{Binding Sub}" />
        </StackPanel>
    </hc:TransitioningContentControl>
</Page>